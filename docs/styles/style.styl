@import 'mixins'
@import 'font.css'

::selection
  text-shadow none
  background-color #cae1f0
::-moz-selection
  text-shadow none
  background-color #cae1f0

body
  background-image url('/images/brillant.png')
  background-repeat repeat
  position relative
  font-size 13px
  padding-top 50px
  .question
    padding-top 70px
    margin-top -70px
    margin-bottom 30px
    .answer
      margin-left 25px
  &.about
  &.info:not(.hebrew)
    padding-top 87px
    .anchor
      padding-top 87px
      margin-top -87px


.navbar
  text-shadow 0 1px rgba(#000, .2)
  .nav-logo
    margin-top 9px
    margin-bottom 8px
    height 33px
    width 68px

a,
.navbar .nav > li > a
  transition background-color .25s, color .25s

a:hover
  text-decoration none

.navbar .nav > li > a:hover
  background-color rgba(#fff, .1)

.content-container .main-content
  font-size 1.2em
  line-height 1.75em
  p
    margin-bottom 12px

.well
  background-color rgba(#000, .025)

.aside
  #social
    // font-size 1.2em
    margin-bottom 20px
    p
      margin 0
      img
        height 14px
        vertical-align text-bottom
  margin-top 30px
  margin-bottom 20px
  table
    td, th
      border-top 0
      padding-left 0
      padding-right 16px
  h1, h2, h3, h4, h5, h6
    margin-top 0
  .aside-logo
    width 68px
    height 33px

body.home
  &:not(.hebrew) .lead
    font-size 18px
  .aside
    margin-top 0

@media screen and (min-width: 1200px)
  img.companies
    max-width 861px

@media screen and (min-width: 979px)
  body.home .content-container
    padding-top 1.5em
  .tagline-container
    margin-bottom .5em

@media screen and (max-width: 979px)
  body
    padding-top 0 !important
    .question
      padding-top 0
      margin-top 0
    &.about .anchor
    &.info .anchor
      padding-top 0
      margin-top 0
  .navbar-fixed-top
    margin-bottom 0 !important
  .thru-container
    &.tagline-container
      margin-bottom 1.5em

@media screen and (max-width: 767px)
  body
    padding 0
  .content-container,
  .thru-container
    padding-left 20px
    padding-right 20px
    .content
      width auto !important
  .navbar-fixed-top,
  .navbar-fixed-bottom
    margin-right 0
    margin-left 0

.content-container .content 
  padding-bottom 1em
  li
    line-height: 1.75em;

h1, h2, h3, h4, h5, h6
  margin-top 1em
  margin-bottom .5em

.thru-container
  overflow hidden
  background-image url('/images/trans-pattern.png')
  background-repeat repeat
  background-color #cae1f0
  text-shadow 0 1px #fff
  position relative
  &:before,
  &:after
    position absolute
    left -10px
    right -10px
    box-shadow 0 0 12px rgba(#000, .2)
    display block
    content ' '
    height 24px
    background transparent
  &:before
    top -24px
  &:after
    bottom -24px
  &.footer-container
    padding 1em 0
  .footer
    text-align: center;
    p
      margin 0

.tagline-container
  .container
    margin-top 20px
    margin-bottom 20px
    .carousel
      margin-bottom 0
      .carousel-inner
        box-shadow 0 0 12px rgba(#000, .5)
        .carousel-caption
          text-shadow none
          background-color rgba(#fff, .85)
          h4,
          p
            color #555

.drop-shadow
  box-shadow 0 0 12px rgba(#000, .25)

.forbes-quote
  max-width 450px
  margin-left auto
  margin-right auto
  blockquote
    margin-bottom 0

.main-content
  .table
    font-size 13px
    th,
    td
      vertical-align middle
      padding-left 16px

form#apply-form
  // label
  //   max-width 550px
  ul.fields > li
    margin-bottom .5em
    fieldset
      padding-bottom: .5em;
    &.required > label
      position relative
      &:before
        content '*'
        color #bd4247
        position absolute
        top 0
        left -.75em
  label.error
    display inline
    margin-left 10px
    vertical-align text-bottom
    color #b94a48
    &:before
      content ''
      display none

.carousel-control
  transition opacity .25s, color .25s


// subnav

.subnav
  font-size 14px
  margin-bottom 30px
  margin-top 30px
  width 100%
  min-height 36px
  background-color #eee
  background-repeat repeat-x
  background-image -moz-linear-gradient(top, #f5f5f5 0%, #eee 100%)
  background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f5f5f5), color-stop(100%, #eee))
  background-image -webkit-linear-gradient(top, #f5f5f5 0%, #eee 100%)
  background-image -ms-linear-gradient(top, #f5f5f5 0%, #eee 100%)
  background-image -o-linear-gradient(top, #f5f5f5 0%, #eee 100%)
  background-image linear-gradient(top, #f5f5f5 0%, #eee 100%)
  border 1px solid #e5e5e5
  border-radius 4px
  .nav
    margin-bottom 0
    & > li
      &:first-child > a,
      &:first-child > a:hover
        border-left 0
        padding-left 12px
        border-radius 4px 0 0 4px
      &:last-child > a
        border-right 0
      & > a
        margin 0
        padding-top 11px
        padding-bottom 11px
        border-left 1px solid #f5f5f5
        border-right 1px solid #e5e5e5
        border-radius: 0
    & > .active > a,
    & > .active > a:hover
      padding-left 13px
      color #777
      background-color #e9e9e9
      border-right-color #ddd
      border-left 0
      box-shadow inset 0 3px 5px rgba(#000, .05)
      .caret
        border-top-color #777
  .dropdown-menu
    border-radius 0 0 4px 4px

@media (min-width: 980px)
  .subnav
    margin-top 0
    position fixed
    top 50px
    left 0
    right 0
    z-index 1020
    border-color #d5d5d5
    border-width 0 0 1px
    border-radius 0
    box-shadow inset 0 1px 0 #fff, 0 1px 5px rgba(0,0,0,.1)
    .nav
      width 938px
      margin 0 auto
      padding 0 1px
      & > li:first-child > a,
      & > li:first-child > a:hover
        border-radius: 0;

@media (min-width: 1200px)
  .subnav
    .nav
      width 1168px

